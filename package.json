{
	"name": "obsidian-cursor-agent",
	"version": "1.0.0",
	"description": "Obsidian plugin: chat UI for Cursor's cursor-agent CLI.",
	"main": "main.js",
	"type": "module",
	"scripts": {
		"dev": "npm-run-all --parallel dev:*",
		"dev:tailwind": "tailwindcss -i src/styles/tailwind.css -o styles.css --watch",
		"dev:esbuild": "node esbuild.config.mjs",
		"build": "npm run build:tailwind && npm run build:esbuild || exit 1",
		"build:tailwind": "tailwindcss -i src/styles/tailwind.css -o styles.css --minify",
		"build:esbuild": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
		"version": "node version-bump.mjs && git add manifest.json versions.json",
		"lint": "eslint ."
	},
	"keywords": [],
	"license": "0-BSD",
	"devDependencies": {
		"@eslint/js": "9.39.2",
		"@tailwindcss/container-queries": "^0.1.1",
		"@types/node": "^18.x",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"esbuild": "0.27.2",
		"eslint-plugin-obsidianmd": "0.1.9",
		"eslint-plugin-react-hooks": "^7.0.1",
		"globals": "14.0.0",
		"jiti": "2.6.1",
		"npm-run-all": "^4.1.5",
		"tailwindcss": "^3.4.15",
		"tailwindcss-animate": "^1.0.7",
		"tslib": "2.8.1",
		"typescript": "^5.9.3",
		"typescript-eslint": "8.50.1"
	},
	"dependencies": {
		"@lexical/react": "^0.39.0",
		"@radix-ui/react-collapsible": "^1.1.12",
		"@radix-ui/react-dropdown-menu": "^2.1.16",
		"@radix-ui/react-scroll-area": "^1.2.10",
		"@radix-ui/react-slot": "^1.2.4",
		"@radix-ui/react-tooltip": "^1.2.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lexical": "^0.39.0",
		"lucide-react": "^0.562.0",
		"obsidian": "latest",
		"react": "^19.2.3",
		"react-dom": "^19.2.3",
		"tailwind-merge": "^3.4.0"
	}
}
